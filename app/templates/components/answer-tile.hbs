{{yield}}
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-5">
                <p>{{answer.answered}}</p>
                <p><em>~ by {{answer.author}}</em><span class="label label-default">{{answer.dateAnswered}}</span></p>
                <button type="button" class="btn btn-sm btn-danger" {{action 'delete' answer}}><span class="glyphicon glyphicon-fire"></span></button>
            </div>
        </div>
    </div>
</div>
