{{yield}}
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-5">
          <p>{{answer.answered}}</p><br>
          <p id="ans-author"><em>~ by {{answer.author}}</em><span class="label label-default">{{answer.dateAnswered}}</span></p>
          <button type="button" class="btn btn-sm btn-primary" {{action 'answerUp' answer}}><span class="glyphicon glyphicon-thumbs-up"></span> {{answer.upvote}}</button>
          <button type="button" class="btn btn-sm btn-warning" {{action 'answerDown' answer}}><span class="glyphicon glyphicon-thumbs-down"></span> {{answer.downvote}}</button>

          <div class="delete">
            <img src="/image/delete.png" {{action 'delete' answer}}>
          </div>
          <p><em>~ by {{answer.author}}</em><span class="label label-default"></span></p>

        </div>
      </div>
    </div>
  </div>
</div>
